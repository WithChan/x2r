        <span class="text-sm">Scroll to explore</span>
    </div>




    <script>


            // Dot navigation
        document.querySelectorAll('.dot').forEach(dot => {
            dot.addEventListener('click', () => {
                const sectionIndex = parseInt(dot.getAttribute('data-section'));
                currentSection = sectionIndex;
                updateBackground(currentSection);
                updateContentVisibility(currentSection);
                updateDots(currentSection);
            });
        });

          function updateDots(sectionIndex) {
            document.querySelectorAll('.dot').forEach((dot, index) => {
                if (index === sectionIndex) {
                    dot.classList.add('active');
                } else {
                    dot.classList.remove('active');
                }
            });
        }
    </script>